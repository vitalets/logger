{
  "name": "@vitalets/logger",
  "description": "Pure typescript logger with levels and prefix support",
  "version": "1.2.1",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src test --ext .ts",
    "tsc": "tsc --noEmit",
    "test": "mocha -n loader=ts-node/esm test/setup.ts test/specs",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "release": "npm run lint && npm t && npm run build && np --yolo --no-release-draft"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "eslint --ext .ts --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "eslint": "^8.5.0",
    "eslint-plugin-mocha": "^10.0.3",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.3",
    "np": "^7.6.0",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/logger.git"
  },
  "license": "MIT"
}
